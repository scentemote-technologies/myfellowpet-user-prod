<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    xmlns:tools="http://schemas.android.com/tools
    <!-- Native “launch” theme: completely see-through -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Don’t show any preview at all -->
        <item name="android:windowDisablePreview" tools:ignore="NewApi">true</item>
        <!-- Make the window transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Keep it full-screen, no title bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- After Flutter starts, use your normal app theme -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
